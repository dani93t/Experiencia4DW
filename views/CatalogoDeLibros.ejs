

<div class="container">
  <div class="card card-outline-azul mb-3 ">
    <div class="panel panel-primary">
      <div class="panel-heading" style="text-align:center ;height: 40px;">Catalogo de libros</div>
    </div>
    <div class="container">
      <br>
          <table class="table table-dark">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Autor</th>
        <th>cantidad</th>
        <th>compra</th>
      </tr>
    </thead>
    <tbody>
      <% _.each(libros, function(libro) { %>
      <tr>
        <td><%= libro.nombre %></td>
        <td><%= libro.autor %></td>
        <td><%= libro.cantidad %></td>
        <td><a class="btn btn-primary" href="/venta/<%=libro.id%>">Comprar</a></td>
      </tr>
      <% }) %>  
    </tbody>
    </table> 
    </div>
  </div>
  <div style="text-align:center">
    <button class="btn btn-success text-align" data-toggle="modal" data-target="#myModal">agregar nuevo libro</button>
    <a class="btn btn-primary" href="/venta">Comprar libro</a>
  </div>
     
    

<!-- modal -->
  <div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
  <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Registrar nuevo libro</h4>
      </div>
      <div class="modal-body">
        <form method="POST" action="/registrar">
          <div class="form-group">
            <label>Nombre</label>
            <input type="text" class="form-control" name="nombre">
          </div>  
          <div class="form-group">  
            <label>autor</label>
            <input type="text"  class="form-control" name="autor">
          </div>
          <div class="form-group"> 
            <label>cantidad</label> 
            <input type="number" min="1" class="form-control" name="cantidad">
          </div>
          <input type="submit" name="">
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>    
</div>   

   